# Include the README
include README.md

# Include the license
include LICENSE

# Include requirements files
include requirements.txt

# Include configuration files
include pyproject.toml
include setup.py

# Include any additional documentation
include *.md
include *.rst
include *.txt

# Include any configuration files in the root
include .gitignore

# Exclude unnecessary files and directories
exclude .git*
exclude .DS_Store
exclude Thumbs.db
exclude *.pyc
exclude *.pyo
exclude __pycache__
exclude .pytest_cache
exclude .mypy_cache
exclude .coverage
exclude htmlcov

# Exclude build artifacts
exclude build
exclude dist
exclude *.egg-info

# Exclude development/testing files
exclude tests
exclude .tox
exclude .venv
exclude venv
exclude env

# Include package data
recursive-include holdtranscribe *.py
recursive-include holdtranscribe *.txt
recursive-include holdtranscribe *.md

# Exclude compiled Python files from package
recursive-exclude holdtranscribe *.pyc
recursive-exclude holdtranscribe *.pyo
recursive-exclude holdtranscribe __pycache__
